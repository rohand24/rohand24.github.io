---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { siteConfig } from '../data/siteConfig.js';

const { title, description } = Astro.props;
const pageTitle = title ? `${title} | ${siteConfig.site.title}` : siteConfig.site.title;
const metaDescription = description ?? siteConfig.site.description;
const base = import.meta.env.BASE_URL;
const faviconPath = siteConfig.assets?.favicon ?? '/favicon.svg';
const faviconHref = faviconPath.startsWith('/')
  ? `${base}${faviconPath.replace(/^\//, '')}`
  : `${base}${faviconPath}`;
---

<!doctype html>
<html lang={siteConfig.site.language ?? 'en'}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href={faviconHref} />
		<meta name="description" content={metaDescription} />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<div class="page">
			<Header />
			<main>
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Fraunces:wght@400;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap');

	:global(:root) {
		color-scheme: light;
		--ink: #14120f;
		--muted: #4b4a45;
		--muted-light: #6d6b65;
		--accent: #f45d48;
		--accent-2: #1c4cff;
		--accent-3: #f4b942;
		--surface: rgba(255, 255, 255, 0.9);
		--border: rgba(20, 18, 15, 0.1);
		--shadow: 0 18px 40px rgba(12, 12, 12, 0.12);
		--radius: 18px;
	}

	:global(html) {
		scroll-behavior: smooth;
	}

	:global(body) {
		margin: 0;
		min-height: 100%;
		font-family: 'Space Grotesk', sans-serif;
		color: var(--ink);
		background: radial-gradient(circle at top left, #f9e7d2 0%, #f4efe5 45%, #f6f1ea 100%);
	}

	:global(*) {
		box-sizing: border-box;
	}

	:global(a) {
		color: inherit;
		text-decoration: none;
	}

	:global(h1),
	:global(h2),
	:global(h3) {
		font-family: 'Fraunces', serif;
		margin: 0 0 0.5rem;
		letter-spacing: -0.02em;
	}

	:global(p) {
		color: var(--muted);
		line-height: 1.65;
		margin: 0 0 1rem;
	}

	.page {
		position: relative;
		min-height: 100vh;
		isolation: isolate;
	}

	.page::before,
	.page::after {
		content: '';
		position: absolute;
		border-radius: 999px;
		filter: blur(0px);
		opacity: 0.75;
		z-index: -1;
	}

	.page::before {
		width: 360px;
		height: 360px;
		top: -120px;
		right: 10%;
		background: radial-gradient(circle, rgba(244, 185, 66, 0.5), transparent 70%);
	}

	.page::after {
		width: 420px;
		height: 420px;
		bottom: -160px;
		left: -120px;
		background: radial-gradient(circle, rgba(28, 76, 255, 0.25), transparent 70%);
	}

	main {
		padding: 2rem 1.5rem 3rem;
		max-width: 1120px;
		margin: 0 auto;
	}

	:global(.section) {
		margin: 3.5rem 0;
	}

	:global(.eyebrow) {
		text-transform: uppercase;
		font-size: 0.75rem;
		letter-spacing: 0.2em;
		color: var(--muted-light);
	}

	:global(.button) {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.3rem;
		border-radius: 999px;
		font-weight: 600;
		background: var(--accent);
		color: #fffaf5;
		box-shadow: var(--shadow);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	:global(.button:hover) {
		transform: translateY(-2px);
		box-shadow: 0 20px 45px rgba(12, 12, 12, 0.16);
	}

	:global(.button.secondary) {
		background: #fffaf5;
		color: var(--ink);
		border: 1px solid var(--border);
		box-shadow: none;
	}

	:global(.card) {
		background: var(--surface);
		border-radius: var(--radius);
		border: 1px solid var(--border);
		padding: 1.5rem;
		box-shadow: var(--shadow);
	}

	:global(.tag) {
		display: inline-flex;
		align-items: center;
		padding: 0.2rem 0.7rem;
		border-radius: 999px;
		background: rgba(244, 185, 66, 0.25);
		font-size: 0.75rem;
		font-weight: 600;
		color: var(--ink);
	}

	:global(.tag.alt) {
		background: rgba(28, 76, 255, 0.12);
	}

	:global(.grid) {
		display: grid;
		gap: 1.5rem;
	}

	@media (min-width: 720px) {
		main {
			padding: 3.5rem 2rem 4rem;
		}

		:global(.grid.two) {
			grid-template-columns: repeat(2, minmax(0, 1fr));
		}
	}

	@media (max-width: 640px) {
		:global(.button) {
			width: 100%;
			justify-content: center;
		}
	}
</style>
